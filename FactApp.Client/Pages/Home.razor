@page "/"
@inject HttpClient http
@inject IFactService _factService

<MudContainer Class="d-flex align-center justify-center flex-column mud-width-full"  style="height:90vh;">
    <MudText Typo="Typo.h5" Class="mb-5">@_fact.Fact (@_fact.Length chars)</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="GetNewFact">New fact</MudButton>
</MudContainer>

@code{
    private FactDto _fact = new();

    protected override async Task OnInitializedAsync()
    {
        await GetNewFact();
    }
    
    private async Task GetNewFact()
    {
        _fact = await _factService.GetFact();
    }
}